<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>ruby_template</name>	
	<creationDate>April 2015</creationDate>	
	<author>Du Nguyen</author>	
	<authorEmail>nguyenvuledu@gmail.com</authorEmail>	
	<authorUrl>http://www.stroff.com</authorUrl>	
	<copyright>Copyright (C) 2015 Du Nguyen. All rights reserved.</copyright>	
	<version>1.0.0</version>	
	<description>Template for Joomla 3.x.x</description>	
	<files>		
		<filename>index.php</filename>		
		<filename>component.php</filename>		
		<filename>templateDetails.xml</filename>		
		<filename>template_thumbnail.png</filename>		
		<filename>params.ini</filename>		
		<filename>template_functions.php</filename>		
		<folder>images</folder>		
		<folder>css</folder>		
		<folder>html</folder>		
		<folder>scripts</folder>	
	</files>	
	<positions>

		<position>menu</position>
		<position>banner</position>						
		<position>bottom</position>		

	</positions>	
	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.		<languages folder="language">		<language tag="en-GB">en-GB/en-GB.tpl_beez_20.ini</language>		<language tag="en-GB">en-GB/en-GB.tpl_beez_20.sys.ini</language>	</languages>-->	
	<config>		
	<fields name="params">			
	<fieldset name="advanced">				
	<field name="menutype" type="text" label="Menutype for homepage" description="Enter menutype for top menu" default="mainmenu" />					
	<field name="loadjquery" type="list" default="1" label="Load JQuery" description="Whether load JQuerry or not">						
		<option value="1">Yes</option>						
		<option value="0">No</option>					
	</field>							
	</fieldset>		
	</fields>	
	</config>
</extension>